---
import { getBlogList, getCategoryList } from "@libs/microcms.ts";
import Layout from "@layouts/Layout.astro";
import BlogList from "@components/BlogList.astro";
import Pagination from "@components/Pagination.astro";
import CategoryList from "@components/CategoryList.astro";
import { LIMIT } from "@constants/index.ts";
import { getSettings } from "@libs/microcms.ts";
import { getNoticeList } from "@libs/microcms.ts"; // ← あなたのlibs側に合わせて
import SearchBox from "@components/SearchBox.astro";
export const prerender = true;

const settings = await getSettings();

const { contents: blogs, totalCount } = await getBlogList({
  limit: LIMIT,
});

const { contents: categories } = await getCategoryList();

const Meta = {
  title: settings?.title || "Set Your Title Here",
};

const { contents: latestDocs } = await getBlogList({
  limit: 5,
  orders: "-publishedAt",
});


// 重要：最新1件（なければnull）
const importantRes = await getNoticeList({
  limit: 1,
  orders: "-publishedAt",
  filters: "isImportant[equals]true",
});
const importantNotice = importantRes.contents?.[0] ?? null;

// 通常：最新5件（重要も混ざると嫌なら除外する）
const noticeRes = await getNoticeList({
  limit: 5,
  orders: "-publishedAt",
  // 重要をお知らせ欄に出したくない場合はこれ
  filters: "isImportant[not_equals]true",
});
const notices = noticeRes.contents ?? [];
---
<Layout Meta={Meta}>
  {importantNotice && (
    <div slot="topbar" class="bg-sky-50 border-b border-sky-200">
      <div class="mx-auto w-full max-w-6xl px-4 md:px-6 py-2 text-sm">
        <div class="flex items-center gap-2">
          <span class="shrink-0 inline-flex items-center rounded-full bg-sky-100 px-2 py-0.5 text-xs font-semibold text-sky-900">
            重要
          </span>

          <a
            href={`/news/${importantNotice.id}/`}
            class="min-w-0 truncate text-sky-950 hover:underline"
          >
            {importantNotice.title}
          </a>

          <a
            href={`/news/${importantNotice.id}/`}
            class="ml-auto shrink-0 text-sky-900 hover:underline"
          >
            詳細 →
          </a>
        </div>
      </div>
    </div>
  )}

  <div slot="main">
    <!-- ① 検索ヒーロー：full-bleed -->
    <section class="relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] w-screen bg-gradient-to-b from-sky-100 to-sky-200">
      <div class="mx-auto max-w-6xl px-4 md:px-6 pt-10 md:pt-12 pb-8 md:pb-10">
        <div class="text-center">
          <h1 class="text-3xl md:text-4xl font-semibold tracking-tight text-gray-900">
            どんなことにお困りですか？
          </h1>
          <p class="mt-2 text-sm text-gray-700">
            機能や設定、トラブルシューティングを検索できます。
          </p>

          <div class="mt-6 flex justify-center">
            <SearchBox />
          </div>
        </div>
      </div>
    </section>

    <!-- ② カードだけ灰色背景：full-bleed -->
    <section class="relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] w-screen bg-gray-100/70">
      <div class="mx-auto max-w-6xl px-4 md:px-6 py-10">
        <!-- 枠は白、角丸は弱め -->
        <div class="bg-white ring-1 ring-black/5 shadow-sm">
          <div class="p-6 md:p-10">
            <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
              <a href="#" class="rounded-lg border border-gray-200 p-6 hover:bg-gray-50 transition">
                <h3 class="text-base font-semibold text-gray-900">カード（例）</h3>
                <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
              </a>
              <a href="#" class="rounded-lg border border-gray-200 p-6 hover:bg-gray-50 transition">
                <h3 class="text-base font-semibold text-gray-900">カード（例）</h3>
                <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
              </a>
              <a href="#" class="rounded-lg border border-gray-200 p-6 hover:bg-gray-50 transition">
                <h3 class="text-base font-semibold text-gray-900">カード（例）</h3>
                <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
              </a>
            </section>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- ③ フッターの“下”に置く：お知らせ / 最新記事（2列） -->
  <div slot="afterFooter" class="bg-white">
    <div class="mx-auto max-w-6xl px-4 md:px-6 py-10">
      <section class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- お知らせ -->
        <div class="rounded-xl border border-gray-200 bg-white p-6">
          <div class="flex items-center justify-between gap-4">
            <h2 class="text-lg font-semibold text-gray-900">お知らせ</h2>
            <a href="/news" class="text-sm font-medium text-gray-700 hover:underline">
              過去のお知らせを見る →
            </a>
          </div>

          <div class="mt-4 divide-y">
            {notices.map((n) => (
              <a href={`/news/${n.id}/`} class="block py-3 hover:bg-gray-50 rounded-lg px-2 -mx-2">
                <div class="text-xs text-gray-500">{n.publishedAt?.slice(0, 10)}</div>
                <div class="mt-1 text-sm font-medium text-gray-900">{n.title}</div>
              </a>
            ))}
          </div>
        </div>

        <!-- 最新記事 -->
        <div class="rounded-xl border border-gray-200 bg-white p-6">
          <div class="flex items-center justify-between gap-4">
            <h2 class="text-lg font-semibold text-gray-900">最新記事</h2>
            <a href="/docs" class="text-sm font-medium text-gray-700 hover:underline">
              すべて見る →
            </a>
          </div>

          <div class="mt-4 divide-y">
            {latestPosts.map((p) => (
              <a href={`/docs/${p.id}/`} class="block py-3 hover:bg-gray-50 rounded-lg px-2 -mx-2">
                <div class="text-xs text-gray-500">{p.publishedAt?.slice(0, 10)}</div>
                <div class="mt-1 text-sm font-medium text-gray-900">{p.title}</div>
              </a>
            ))}
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>
