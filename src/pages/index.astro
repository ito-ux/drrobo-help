---
import { getBlogList, getCategoryList } from "@libs/microcms.ts";
import Layout from "@layouts/Layout.astro";
import BlogList from "@components/BlogList.astro";
import Pagination from "@components/Pagination.astro";
import CategoryList from "@components/CategoryList.astro";
import { LIMIT } from "@constants/index.ts";
import { getSettings } from "@libs/microcms.ts";
import { getNoticeList } from "@libs/microcms.ts"; // ← あなたのlibs側に合わせて
import SearchBox from "@components/SearchBox.astro";
export const prerender = true;

const settings = await getSettings();

const { contents: blogs, totalCount } = await getBlogList({
  limit: LIMIT,
});

const { contents: categories } = await getCategoryList();

const Meta = {
  title: settings?.title || "Set Your Title Here",
};

// 重要：最新1件（なければnull）
const importantRes = await getNoticeList({
  limit: 1,
  orders: "-publishedAt",
  filters: "isImportant[equals]true",
});
const importantNotice = importantRes.contents?.[0] ?? null;

// 通常：最新5件（重要も混ざると嫌なら除外する）
const noticeRes = await getNoticeList({
  limit: 5,
  orders: "-publishedAt",
  // 重要をお知らせ欄に出したくない場合はこれ
  filters: "isImportant[not_equals]true",
});
const notices = noticeRes.contents ?? [];
---

<Layout Meta={Meta}>
  {importantNotice && (
    <div slot="topbar" class="bg-sky-50 border-b border-sky-200">
      <div class="mx-auto w-full max-w-6xl px-4 md:px-6 py-2 text-sm">
        <div class="flex items-center gap-2">
          <span class="shrink-0 inline-flex items-center rounded-full bg-sky-100 px-2 py-0.5 text-xs font-semibold text-sky-900">
            重要
          </span>

          <a
            href={`/news/${importantNotice.id}/`}
            class="min-w-0 truncate text-sky-950 hover:underline"
          >
            {importantNotice.title}
          </a>

          <a
            href={`/news/${importantNotice.id}/`}
            class="ml-auto shrink-0 text-sky-900 hover:underline"
          >
            詳細 →
          </a>
        </div>
      </div>
    </div>
  )}

  <!-- ここから通常のトップコンテンツ -->

  <div slot="main" class="space-y-10">
    <!-- ① 検索ヒーロー -->
    <section class="rounded-2xl bg-gray-50 p-6 md:p-10 text-center">
      <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">
        どんなことにお困りですか？
      </h1>
      <div class="mt-6">
        <SearchBox />
      </div>
    </section>

<!-- ② 特集バナー（スタートガイド） -->
<section class="border border-gray-200 bg-white">
  <a href="/start-guide" class="block">
    <img
  src="/assets/images/bn_start_guide.png"
  alt="Dr.Robo スタートガイド"
  class="mx-auto w-full max-w-4xl h-auto"
/>

  </a>
</section>


    <!-- ③ お知らせ（1カラム） -->
<section class="mt-10 rounded-2xl border bg-white p-6">
  <div class="flex items-center justify-between">
    <h2 class="text-lg font-semibold">お知らせ</h2>
    <a href="/news" class="text-sm font-medium hover:underline">
      過去のお知らせを見る →
    </a>
  </div>

  <div class="mt-4 divide-y">
    {notices.map((n) => (
      <a href={`/news/${n.id}/`} class="block py-3 hover:bg-gray-50 rounded-lg px-2 -mx-2">
        <div class="text-xs text-gray-500">{n.publishedAt?.slice(0,10)}</div>
        <div class="mt-1 text-sm font-medium text-gray-900">{n.title}</div>
      </a>
    ))}
  </div>
</section>


    <!-- ④ 2カラムのカード群（ずっと2列 / 以降積み下がり） -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <a href="#" class="rounded-2xl border border-gray-200 p-6 hover:bg-gray-50">
        <h3 class="text-lg font-semibold">カード（左）</h3>
        <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
      </a>
      <a href="#" class="rounded-2xl border border-gray-200 p-6 hover:bg-gray-50">
        <h3 class="text-lg font-semibold">カード（右）</h3>
        <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
      </a>

      <!-- 追加コンテンツはここに積み下がる -->
      <a href="#" class="rounded-2xl border border-gray-200 p-6 hover:bg-gray-50">
        <h3 class="text-lg font-semibold">カード（下段1）</h3>
        <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
      </a>
      <a href="#" class="rounded-2xl border border-gray-200 p-6 hover:bg-gray-50">
        <h3 class="text-lg font-semibold">カード（下段2）</h3>
        <p class="mt-2 text-sm text-gray-600">説明テキスト</p>
      </a>
    </section>
  </div>
</Layout>
