---
import Container from "@components/Container.astro";
import SearchBox from "@components/SearchBox.astro";

const { title, showSearch = false } = Astro.props as {
  title?: string;
  showSearch?: boolean;
};
---

<header class="bg-black text-white border-b border-white/10">
  <Container class="py-2 flex items-center justify-between gap-4">
    <a href="/" class="flex items-center gap-2">
      <img src="/assets/images/logo.png" alt="Dr.Robo ヘルプセンター" class="h-8 w-auto md:h-9" />
    </a>

    {showSearch && (
      <div class="w-64 md:w-80 flex items-center">
        <SearchBox compact />
      </div>
    )}
  </Container>
</header>
