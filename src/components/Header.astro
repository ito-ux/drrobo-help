---
// src/components/Header.astro
import SearchBox from "@components/SearchBox.astro";

const { title, showSearch = false } = Astro.props as {
  title?: string;
  showSearch?: boolean;
};
---

<header class="bg-black text-white border-b border-white/10">
  <div class="mx-auto w-full max-w-6xl px-4 md:px-6 py-2 flex items-center justify-between gap-4">
    <a href="/" class="flex items-center gap-2">
      <img src="/assets/images/logo.png" alt="Dr.Robo ヘルプセンター" class="h-8 w-auto md:h-9" />
    </a>

    {showSearch && (
      <div class="w-56 md:w-64">
        <SearchBox compact />
      </div>
    )}
  </div>
</header>
