---
// src/components/Footer.astro
const { title } = Astro.props;
---

<footer class="bg-white border-t border-gray-200">
  <div class="mx-auto max-w-6xl px-4 md:px-6 py-6 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <img src="/assets/images/logo_drrobo_color.png" alt={title} class="h-5 w-auto" />
      <p class="text-sm text-gray-500">
        &copy; {new Date().getFullYear()} {title}
      </p>
    </div>
    <a href="/about" class="text-sm text-gray-600 hover:underline">About</a>
  </div>
</footer>
